{
  "name": "foundation",
  "private": true,
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": "^18.15.0"
  },
  "devDependencies": {
    "@foundation/eslint-config": "workspace:^",
    "@types/eslint": "^8",
    "@types/node": "^18.15.11",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-yaml": "^0.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "package:core": "yarn workspace @foundation/core",
    "app:cli": "yarn workspace @foundation/cli",
    "app:www-nextjs": "yarn workspace @foundation/www-nextjs",
    "build:nextjs": "yarn app:www-nextjs build",
    "root:lint": "yarn workspaces foreach -ptv run lint",
    "root:clean": "yarn workspaces foreach run clean",
    "compile": "tsc --build",
    "type-check": "tsc --noEmit"
  }
}
